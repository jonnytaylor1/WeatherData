<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>

<TabPane minHeight="-Infinity" prefHeight="1000.0" prefWidth="1000.0" tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="sample.Controller">
    <tabs>
        <Tab text="All Stations">
            <content>
                <BorderPane>
                    <center>
                        <TableView fx:id="tableView" prefHeight="100.0" prefWidth="1000.0">
                            <columns>
                                <TableColumn fx:id="colStation" prefWidth="75.0" text="Station" />
                                <TableColumn fx:id="coltempMax" prefWidth="100.0" text="Highest tempMax" />
                                <TableColumn fx:id="colTMin" prefWidth="116.0" text="Lowest TMin" />
                                <TableColumn fx:id="colAfDays" prefWidth="97.0" text="Total af days" />
                                <TableColumn fx:id="colTotalRainfall" minWidth="3.0" prefWidth="114.0" text="Total Rainfall" />
                            </columns>
                            <padding>
                                <Insets top="20.0" />
                            </padding>
                        </TableView>
                    </center>
                    <right>
                        <Button mnemonicParsing="false" onAction="#handleAction" text="Click Me" BorderPane.alignment="CENTER" />
                    </right>
                </BorderPane>
            </content>
        </Tab>
        <Tab text="Untitled Tab">
            <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" />
            </content>
        </Tab>
    </tabs>
</TabPane>
